<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :commenter, :class=>"w-full border-2 border-gray-400"  %>
  </p>
  <p>
    <%= form.label :Message %><br>
    <%= form.text_area :body, :class=>"w-full border-2 border-gray-400" %>
  </p>
  <p class="my-2">
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </p>

  <p>
    <%= form.submit "Add Comment", :class=> "bg-blue-600 px-2 py-1 mt-3 text-white rounded tracking-wide" %>
  </p>
<% end %>
