<div class="flex flex-col w-full mt-10 text-center">
    <h1 class="text-center mt-20 text-2xl font-semibold sm:text-4xl"><%= @article.title %></h1>
    <p class="text-left w-4/5 md:w-3/5 self-center mt-7"><%= @article.body %></p>
</div>

<div class="flex flex-col w-full text-center">    
    <h2 class="text-left w-4/5 md:w-2/5 self-center font-bold text-lg mt-10">Comments</h2>
    <div class="text-left w-4/5 md:w-2/5 self-center ">
        <%= render @article.comments%>

        <h2 class="text-left w-4/5 md:w-2/5 self-center mt-5 font-semibold">Add a comment:</h2>
              <%= render 'comments/form' %>
        <ul class="my-2">
          <li><%= link_to "Edit", edit_article_path(@article), :class=>"text-gray-400" %></li>
            <li><%= link_to "Delete", article_path(@article), :class=>"text-gray-400",
                          method: :delete,
                          data: { confirm: "Are you sure?" } %></li>
        </ul>
    </div>
</div>

    